generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  userId        String   @unique
  name          String
  email         String   @unique
  password      String
  country       String
  role          Role     @default(USER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  games         Game[]   @relation("UserGames")
  createdGames  Game[]   @relation("CreatedGames")
  launchedGames Game[]   @relation("LaunchedGames")
}

model Game {
  id               Int      @id @default(autoincrement())
  gameId           String   @unique
  location         String   @unique
  status           GameStatus @default(PENDING)
  createdAt        DateTime @default(now())

  createdById      Int
  createdBy        User     @relation("CreatedGames", fields: [createdById], references: [id])

  launchedById     Int?
  launchedBy       User?    @relation("LaunchedGames", fields: [launchedById], references: [id])

  participants     User[]   @relation("UserGames")
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
}

enum GameStatus {
  PENDING
  ACTIVE
  FINISHED
}
